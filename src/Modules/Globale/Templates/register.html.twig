{% block header %}
	{{ include('header.html.twig') }}
{% endblock %}
<title>{% block title %}{% trans %} Registrése {% endtrans %}{% endblock %}</title>


{% block body %}
<body class="app flex-row align-items-center">
<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="card mx-4">
				<div class="card-body p-4">
					<h1>{% trans %} Registro {% endtrans %}</h1>
					<p class="text-muted">{% trans %} Crea tu cuenta {% endtrans %}</p>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<i class="icon-user"></i>
							</span>
						</div>
						<input class="form-control" type="text" placeholder="{% trans %} Usuario {% endtrans %}">
					</div>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text">@</span>
						</div>
						<input class="form-control" id="fauser_email" type="email" name="fauser[email]" required="required"placeholder="{% trans %} Correo electrónico {% endtrans %}">
					</div>
					<div class="input-group mb-3">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<i class="icon-lock"></i>
							</span>
						</div>
						<input class="form-control" id="fauser_plainPassword_first" type="password" name="fauser[plainPassword][first]" required="required" placeholder="{% trans %} Contraseña {% endtrans %}">
					</div>
					<div class="input-group mb-4">
						<div class="input-group-prepend">
							<span class="input-group-text">
								<i class="icon-lock"></i>
							</span>
						</div>
						<input class="form-control" id="fauser_plainPassword_second" type="password" name="fauser[plainPassword][second]" required="required" placeholder="{% trans %} Repetir Contraseña {% endtrans %}">
					</div>
					<input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<button class="btn btn-block btn-success" type="button">{% trans %} Crear Cuenta {% endtrans %}</button>
				</div>
				<div class="card-footer p-4">
					<div class="row">
						<div class="col-6">
							<button class="btn btn-block btn-facebook" type="button">
							<span>facebook</span>
							</button>
						</div>
						<div class="col-6">
							<button class="btn btn-block btn-twitter" type="button">
							<span>twitter</span>
							</button>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>
{% endblock %}