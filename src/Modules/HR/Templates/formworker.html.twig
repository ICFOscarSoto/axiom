{% set params = app.request.attributes.get('_route_params')|merge(app.request.query.all()) %}
{% block header %}
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta name="description" content="Axiom Business Management" />
	<meta name="author" content="" />
	
	{{ include('@Globale/header.html.twig') }}
{% endblock %}
<title>{% block title %}{{ interfaceName }}{% endblock %}</title>
<body class="page-body" data-url="{{ url('indexAdmin') }}">
<div class="page-container {% if userData.interfaceConfig.collapsedSidebar is defined and userData.interfaceConfig.collapsedSidebar %}sidebar-collapsed{% endif %}"><!-- add class "sidebar-collapsed" to close sidebar by default, "chat-visible" to make chat appear always -->
	{{ include('@Globale/sidebar_menu.html.twig') }}
	<div class="main-content">
		{{ include('@Globale/head.html.twig') }}
		<hr />
		{{ include('@Globale/breadcrumb.html.twig') }}
			<!-- MAIN CONTENT -->
    <div class="principal-content">
    <div class="row">
			<div class="col-md-12">
	      <ul class="nav nav-tabs bordered"><!-- available classes "bordered", "right-aligned" -->
						<li class="active">
							<a href="#data" data-toggle="tab">
								<span class="visible-xs"><i class="entypo-home"></i></span>
								<span class="hidden-xs">{% trans %}Worker data{% endtrans %}</span>
							</a>
						</li>
						<li {% if id == 0 %} style="visibility: hidden" {% endif %} >
							<a href="#contracts" data-toggle="tab">
								<span class="visible-xs"><i class="entypo-user"></i></span>
								<span class="hidden-xs">{% trans %}Contracts{% endtrans %}</span>
							</a>
						</li>
						<li {% if id == 0 %} style="visibility: hidden" {% endif %} >
							<a href="#payroll" data-toggle="tab">
								<span class="visible-xs"><i class="entypo-user"></i></span>
								<span class="hidden-xs">{% trans %}Payroll{% endtrans %}</span>
							</a>
						</li>
						<li {% if id == 0 %} style="visibility: hidden" {% endif %} >
							<a href="#training" data-toggle="tab">
								<span class="visible-xs"><i class="entypo-user"></i></span>
								<span class="hidden-xs">{% trans %}Training{% endtrans %}</span>
							</a>
						</li>
            <li {% if id == 0 %} style="visibility: hidden" {% endif %} >
							<a href="#shifts" data-toggle="tab">
								<span class="visible-xs"><i class="entypo-user"></i></span>
								<span class="hidden-xs">{% trans %}Shifts and schedules{% endtrans %}</span>
							</a>
						</li>
            <li {% if id == 0 %} style="visibility: hidden" {% endif %} >
							<a href="#sick" data-toggle="tab">
								<span class="visible-xs"><i class="entypo-user"></i></span>
								<span class="hidden-xs">{% trans %}Sick leave{% endtrans %}</span>
							</a>
						</li>
            <li {% if id == 0 %} style="visibility: hidden" {% endif %} >
							<a href="#holidays" data-toggle="tab">
								<span class="visible-xs"><i class="entypo-user"></i></span>
								<span class="hidden-xs">{% trans %}Holidays{% endtrans %}</span>
							</a>
						</li>
						<li {% if id == 0 %} style="visibility: hidden" {% endif %} >
							<a href="#documents" data-toggle="tab">
								<span class="visible-xs"><i class="entypo-user"></i></span>
								<span class="hidden-xs">{% trans %}Documents{% endtrans %}</span>
							</a>
						</li>
				</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="data">
	            {% set formConstructor = formworker %}
	        		{{ include('@Globale/form.html.twig') }}
	          </div>

						<div class="tab-pane" {% if id == 0 %} style="visibility: hidden" {% endif %} id="contracts">

	          </div>
	          <div class="tab-pane" {% if id == 0 %} style="visibility: hidden" {% endif %}  id="payroll">

	          </div>
						<div class="tab-pane" {% if id == 0 %} style="visibility: hidden" {% endif %}  id="training">

	          </div>
            <div class="tab-pane" {% if id == 0 %} style="visibility: hidden" {% endif %}  id="shifts">

	          </div>
            <div class="tab-pane" {% if id == 0 %} style="visibility: hidden" {% endif %}  id="sick">

	          </div>
            <div class="tab-pane" {% if id == 0 %} style="visibility: hidden" {% endif %}  id="holidays">

	          </div>
						<div class="tab-pane" {% if id == 0 %} style="visibility: hidden" {% endif %}  id="documents">
								{% set cloudConstructor = listDocuments %}
							  {{ include('@Cloud/genericlistfiles.html.twig') }}
						</div>
	        </div>
			</div>
    </div>
	</div>
		<!-- END MAIN CONTENT -->
	{{ include('@Globale/footer.html.twig') }}
	</div>
	{{ include('@Globale/chat.html.twig') }}
	<!-- Chat Histories -->
	{{ include('@Globale/chat_histories.html.twig') }}
</div>
	<!-- MODALS  -->

	<!-- END MODALS -->
{% block footer %}
	<link rel="stylesheet" href="{{ url('index') }}js/dropzone/dropzone.css">
	<link rel="stylesheet" href="{{ url('index') }}js/datatables/datatables.css">
	<link rel="stylesheet" href="{{ url('index') }}js/select2/select2-bootstrap.css">
	<link rel="stylesheet" href="{{ url('index') }}js/select2/select2.css">
	<link rel="stylesheet" href="{{ url('index') }}css/custom.css">
	<!-- Imported scripts on this page -->
 	<script src="{{ url('index') }}js/datatables/datatables.js"></script>
	<script src="{{ url('index') }}js/select2/select2.min.js"></script>
	<script src="{{ url('index') }}js/moment.min.js"></script>
	<script src="{{ url('index') }}js/moment-es.js"></script>
	{{ include('@Globale/bottom.html.twig') }}
	<script src="{{ url('index') }}js/dropzone/dropzone.js"></script>
	<script src="{{ url('index') }}js/dropzone/dropzone-es.js"></script>
{% endblock %}
</body>
