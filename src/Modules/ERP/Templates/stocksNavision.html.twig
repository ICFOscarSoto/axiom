<body>

	{% block stylesheets %}
		<link rel="stylesheet" href="{{ url('index') }}js/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css">
		<link rel="stylesheet" href="{{ url('index') }}css/font-icons/entypo/css/entypo.css">
		<link rel="stylesheet" href="//fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic">
		<link rel="stylesheet" href="{{ url('index') }}css/bootstrap.css">
		<link rel="stylesheet" href="{{ url('index') }}css/neon-core.css">
		<link rel="stylesheet" href="{{ url('index') }}css/neon-theme.css">
		<link rel="stylesheet" href="{{ url('index') }}css/neon-forms.css">
		<link rel="stylesheet" href="{{ url('index') }}css/custom.css">
		<link rel="stylesheet" href="{{ url('index') }}/js/icheck/skins/flat/_all.css">
		<link rel="stylesheet" href="{{ url('index') }}css/font-icons/font-awesome/css/font-awesome.min.css">
		<link rel="stylesheet" href="{{ url('index') }}js/select2/select2-bootstrap.css">
		<link rel="stylesheet" href="{{ url('index') }}js/select2/select2.css">
		<link rel="stylesheet" href="{{ url('index') }}css/colpick.css" type="text/css"/>
		<link rel="stylesheet" href="{{ url('index') }}js/jquery-confirm/jquery-confirm.min.css" type="text/css"/>
		<script src="https://kit.fontawesome.com/ebec608765.js" crossorigin="anonymous"></script>

		{% if include_header is defined %}
			{% for item in include_header %}
				{% if item.type=="css" %}
					<link rel="stylesheet" href="{{ url('index') }}{{ item.path }}">
				{% endif %}
				{% if item.type=="js" %}
					<script src="{{ url('index') }}{{ item.path }}"></script>
				{% endif %}
			{% endfor %}
		{% endif %}

	{% endblock %}
		<!-- MAIN CONTENT -->
		<div class="page-container">
		<div class="main-content">
		<div class="principal-content">

				<div class="tab-content col-md-7"  style="padding:0;">
					<div class="panel-body">
						<div class="col-md-12">
							<h2>{{ producto }}</h2>
						</div>
					</div>



					{% if variantes is not null %}
						{% for variante in  variantes %}
									<div class="panel-body">
										<div class="col-md-12">
												<h3>{{ variante.type }} {{ variante.name }}</h3>
								 		</div>
									</div>
										<div class="panel-body">
											<div class="col-md-6">
											{% if stockCampollano[variante.id] is not empty %}
												<label>Stock en Campollano</label>
												<table class="table table-bordered">
													<thead>
														<tr>
																<th>Ubicación</th>
																<th>Cantidad</th>
														</tr>
													</thead>
													<tbody>
															{% for stock in stockCampollano[variante.id] %}
															<tr>
																<td>{{ stock.store_location }}</td>
																<td>{{ stock.quantity }}</td>
															</tr>
															{% endfor %}
													</tbody>
											{% else %}
															<label>Este producto no tiene asociada ninguna ubicación en Campollano</label>
											{% endif %}
											</table>
										</div>
									</div>

										<div class="panel-body">
											<div class="col-md-6">
											{% if stockRomica[variante.id] is not empty %}
												<label>Stock en Romica</label>
												<table class="table table-bordered">
													<thead>
														<tr>
																<th>Ubicación</th>
																<th>Cantidad</th>
														</tr>
													</thead>
													<tbody>
															{% for stock in stockRomica[variante.id] %}
															<tr>
																<td>{{ stock.store_location }}</td>
																<td>{{ stock.quantity }}</td>
															</tr>
															{% endfor %}
													</tbody>
													{% else %}
															<label>Este producto no tiene asociada ninguna ubicación en Romica</label>
													{% endif %}
												</table>
											</div>
										</div>
							{% endfor %}
					{% else %}

								{% if stockRomica is not null or stockCampollano is not null %}

											<div class="panel-body">
												<div class="col-md-6">
												{% if stockCampollano is not null %}
													<label>Stock en Campollano</label>
													<table class="table table-bordered">
														<thead>
															<tr>
															  	<th>Ubicación</th>
																	<th>Cantidad</th>
													  	</tr>
														</thead>
														<tbody>
																{% for stock in stockCampollano %}
																<tr>
																	<td>{{ stock.store_location }}</td>
																	<td>{{ stock.quantity }}</td>
																</tr>
																{% endfor %}
														</tbody>
														{% else %}
														<thead>
															<tr>
																	<th>Ubicación</th>
																	<th>Cantidad</th>
															</tr>
														</thead>
														<tbody>
																{% for stock in stockCampollano %}
																<tr>
																	<td>{{ stock.store_location }}</td>
																	<td>{{ stock.quantity }}</td>
																</tr>
																{% endfor %}
														</tbody>
														{% endif %}
													</table>
												</div>
											</div>
											{% else %}
													<label>Este producto no tiene asociada ninguna ubicación en Campollano</label>
											{% endif %}


											{% if stockRomica is not null %}
											<div class="panel-body">
												<div class="col-md-6">
													<label>Stock en Romica</label>
													<table class="table table-bordered">
														<thead>
															<tr>
																	<th>Ubicación</th>
																	<th>Cantidad</th>
															</tr>
														</thead>
														<tbody>
																{% for stock in stockRomica %}
																<tr>
																	<td>{{ stock.store_location }}</td>
																	<td>{{ stock.quantity }}</td>
																</tr>
																{% endfor %}
														</tbody>
													</table>
												</div>
											</div>
											{% else %}
													<label>Este producto no tiene asociada ninguna ubicación en Romica</label>
											{% endif %}
							{% endif %}




				</div>
			</div>
		</div>
	</div>
		<!-- END MAIN CONTENT -->
</body>
