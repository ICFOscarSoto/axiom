 function emptyList()
 {
	 $.ajax({
			url: '{{ url('dataERPEmptyWorkList', {"id": id}) }}',
			type: 'POST',
		/*	data: JSON.stringify(prepare_emptylist_json()),*/
			success:  function( data ) {
				if((--load_wait)==0) $("#load-spinner").fadeOut();
				if(data.result){
					toastr.success("Lista vaciada correctamente", "Confirmación", confirmation);
					location.reload();

				} else {
					toastr.error("No se pudo vaciar la lista", "Confirmación", confirmation);
				}
			}
		});
 }
	function saveLines()
	{
		$.ajax({
			 url: '{{ url('dataERPWorkList', {"id": id}) }}',
			 type: 'POST',
			 data: JSON.stringify(prepare_worklist_json()),
			 success:  function( data ) {
				 if((--load_wait)==0) $("#load-spinner").fadeOut();
				 if(data.result){
					 jQuery.each(data.data.lines, function(i, line) {
						 $("#product-form-line-id-"+line.linenum).val(line.id);
					 });
					 toastr.success("Lista guardada correctamente", "Confirmación", confirmation);
					 location.reload();
					 {% if id==0 %} location.href="/es/ERP/worklist/form/"+data.data.id; {% endif %}
				 } else {
					 toastr.error("No se pudo guardar la lista", "Confirmación", confirmation);
				 }
			 }
		 });

	}

