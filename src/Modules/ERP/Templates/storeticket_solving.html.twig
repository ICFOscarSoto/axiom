<script>

function checkState(){

	var id={{ id }};
	code=$("#storeticketcode").val();
	product=$("#storeticketproduct").val();
	if((++load_wait)==1) $("#load-spinner").fadeIn();
	 $.ajax({
			type: "GET",
			dataType: "json",
			url: "/api/ERP/storetickets/checksolved/"+id,
		}).done(function(data, textStatus, jqXHR) {
			if((--load_wait)==0) $("#load-spinner").fadeOut();
			if(data.result=="1") {
				alert("esta incidencia ya está solucionada");
				window.location.href="/es/ERP/storetickets/form/"+id;
			}

			else{

				$.confirm({
						theme: 'bootstrap',
						title: '',
						content: 'La incidencia '+code+" asociada al producto "+product+" se va a marcar como solucionada ¿Estás seguro?",
						buttons: {
							 confirm: { text: 'Si', btnClass: 'btn-green', action: function(){
												if((++load_wait)==1) $("#load-spinner").fadeIn();
												 $.ajax({
														type: "GET",
														dataType: "json",
														url: "/api/ERP/storetickets/setsolved/"+id,
													}).done(function(data, textStatus, jqXHR) {
														if((--load_wait)==0) $("#load-spinner").fadeOut();
														if(data.result=="1") {
															 window.location.href="/es/ERP/storetickets/form/"+id;
														}

												});
											}

											},
							 cancel: { text: 'No', btnClass: 'btn-red', action: function(){

										 window.location.href="/";
											}
						 }
					 }
				});

			}

	});

}


$(document).ready(function() {

checkState();

});
</script>
