<div class="panel panel-primary panel-shadow" data-collapsed="0" style="-webkit-box-shadow: none; box-shadow:none; margin-bottom: -1px;"><!-- to apply shadow add class "panel-shadow" -->
    <div class="panel-body">
    <div class="row">
      {% if buyorder.state!=null %}
          <div class="col-md-2">
            <label for="buyorder-form-currentstate">Estado actual:</label>
            <select type="text" id="buyorder-form-currentstate" class="form-control select2" required>
              {% for option in states %}
                <option value="{{ option.id }}" {% if buyorder.state.id== option.id %}selected{% endif %}>{{ option.text }}</option>
              {% endfor %}
            </select>
          </div>
      {% else %}
      <div class="col-md-2">
        <label for="buyorder-form-currentstate">Estado actual:</label>
        <select type="text" id="buyorder-form-currentstate" class="form-control select2" required>
          {% for option in states %}
            <option value="{{ option.id }}" {% if option.id==1 %}selected{% endif %}>{{ option.text }}</option>
          {% endfor %}
        </select>
      </div>
      {% endif %}
      {% if buyorder.agent is not null %}
        <div class="col-md-2">
          <label for="buyorder-form-agent">Agente:</label>
          <div class="form-group">
          <input type="text" id="buyorder-form-agent" value="{{ buyorder.agent.name }} {{ buyorder.agent.lastname }}" disabled="disabled" class="form-control" placeholder="Agente">
          <input type="hidden" id="buyorder-form-agent-id" value="{{ buyorder.agent.id }}" class="form-control">
          </div>
        </div>.name
      {% else %}
      <div class="col-md-2">
        <label for="buyorder-form-agen-select">Agente:</label>
        <div class="form-group">
          <select type="text" id="buyorder-form-agents-select" class="form-control select2" required>
            {% for option in agents %}
              <option value="{{ option.id }}" {% if option.id==userData.id %}selected{% endif %}>{{ option.text }}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      {% endif %}
      {% if buyorder.estimateddelivery is not null %}
      <div class="col-md-2" id="buyorder-form-estimateddelivery-div">
        <label for="buyorder-form-estimateddelivery">Fecha estimada de entrega:</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
          <input type="text" id="buyorder-form-estimateddelivery" name="" class="datepicker form-control" value="{{ buyorder.estimateddelivery|date('h:m:s d/m/Y ') }}">
        </div>
      </div>
      {% else %}
      <div class="col-md-2" id="buyorder-form-estimateddelivery-div">
        <label for="buyorder-form-estimateddelivery">Fecha estimada de entrega:</label>
        <div class="input-group">
          <span class="input-group-addon"><i class="fa fa-calendar" aria-hidden="true"></i></span>
          <input type="text" id="buyorder-form-estimateddelivery" name="" class="datepicker form-control">
        </div>
      </div>
      {% endif %}
      {% if id!=0 %}
      <div class="col-md-2" style="text-align:right;">
          <h2>Nº {{ buyorder.code }}</h2>
        <br>
      </div>
      {% endif %}
      <br>
  </div>
  <div class="row">
    <div class="col-md-2" id="searching-supplier">
      <label for="supplier-form-code">Código de Proveedor:</label>
      <div class="input-group">
        <input type="text" readonly id="supplier-form-code" {% if buyorder.supplier!=null %} value="{{ buyorder.supplier.code }}" disabled {% endif %}  class="form-control" placeholder="Selecciona proveedor..." data-toggle="modal" data-target="#supplier-search-modal-form">
        <div class="input-group-btn">
          <button type="button" id="supplier-form-code" class="btn btn-white" style="height: 31px;" data-toggle="modal" data-target="#supplier-search-modal-form">
            <i class="fa fa-search"></i> </button>
          </div>
        </div>
      </div>
      <div class="col-md-2">
        <label for="supplier-form-name">Nombre del proveedor:</label>
        <div class="form-group">
          <input type="text"  id="supplier-form-name" {% if buyorder.suppliername!=null %} value="{{ buyorder.suppliername }}"  {% endif %} class="form-control" placeholder="Nombre del proveedor">
        </div>
      </div>
      <div class="col-md-2">
        <label for="supplier-form-email">Email del proveedor:</label>
        <div class="form-group">
          <input type="text"  id="supplier-form-email" {% if buyorder.email!=null %} value="{{ buyorder.email }}"  {% endif %} class="form-control" placeholder="Email del proveedor">
        </div>
      </div>
      <div class="col-md-2">
        <label for="supplier-form-phone">Teléfono del proveedor:</label>
        <div class="form-group">
          <input type="text"  id="supplier-form-phone" {% if buyorder.phone!=null %} value="{{ buyorder.phone }}"  {% endif %} class="form-control" placeholder="Teléfono del proveedor">
        </div>
      </div>
      <div class="col-md-2">
        <label for="supplier-form-paymentmethod">Método de pago:</label>
        <div class="form-group">
          <input type="text"  id="supplier-form-paymentmethod" {% if buyorder.paymentmethod!=null %} value="{{ buyorder.paymentmethod }}"  {% endif %} class="form-control" placeholder="Método de pago">
        </div>
      </div>
  </div>
  <div class="row">
    {% if buyorder.store!=null %}
        <div class="col-md-3">
          <div class="form-group">
            <label for="buyorder-form-store">Almacén</label>
            <select type="text" id="buyorder-form-store" class="form-control select2" required>
              {% for option in stores %}
                <option value="{{ option.id }}" {% if option.id==buyorder.store.id %} selected{% endif %}>{{ option.text }}</option>
              {% endfor %}
            </select>
          </div>
        </div>
    {% else %}
    <div class="col-md-2">
      <div class="form-group">
        <label for="buyorder-form-store">Almacén</label>
        <select type="text" id="buyorder-form-store" class="form-control select2" required>
          {% for option in stores %}
            <option value="{{ option.id }}" {% if option.id==1 %} selected{% endif %}>{{ option.text }}</option>
          {% endfor %}
        </select>
      </div>
    </div>
    {% endif %}
    <div class="col-md-2">
      <label for="buyorder-form-shippingcharge">Portes:</label>
      <div class="form-group">
        <input type="text"  id="buyorder-form-shippingcharge" {% if buyorder.shippingcharge!=null %}{% if buyorder.shippingcharge=="1" %} value="PAGADOS" {% else %} value="DEBIDOS"{% endif %} {% endif %} class="form-control" placeholder="Portes...">
      </div>
    </div>
    <div class="col-md-1">
      <label for="buyorder-form-minorder">Importe mínimo:</label>
      <div class="form-group">
        <input type="text"  id="buyorder-form-minorder" {% if buyorder.minorder!=null %} value="{{ buyorder.minorder }}" {% endif %} class="form-control" placeholder="Importe mínimo...">
      </div>
    </div>
    <div class="col-md-1">
      <label for="buyorder-form-freeshipping">Portes desde:</label>
      <div class="form-group">
        <input type="text"  id="buyorder-form-freeshipping" {% if buyorder.freeshipping!=null %} value="{{ buyorder.freeshipping }}" {% endif %} class="form-control" placeholder="Portes pagados desde...">
      </div>
    </div>
    <div class="col-md-1">
      <label for="buyorder-form-additionalcost">Gastos extra:</label>
      <div class="form-group">
        <input type="text"  id="buyorder-form-additionalcost" {% if buyorder.additionalcost!=null %} value="{{ buyorder.additionalcost }}" {% endif %} class="form-control" placeholder="Gastos adicionales...">
      </div>
    </div>
    <div class="col-md-1">
      <label for="buyorder-form-weight">Peso:</label>
      <div class="form-group">
        <input type="text"  id="buyorder-form-weight" {% if buyorder.weight!=null %} value="{{ buyorder.weight }}" {% endif %} class="form-control" placeholder="Peso...">
      </div>
    </div>
    <div class="col-md-1">
      <label for="buyorder-form-priority">Urgente:</label>
      <div class="form-group">
        <input type="checkbox"  id="buyorder-form-priority" {% if buyorder.priority!=null %}{% if buyorder.priority==1 %} checked {% endif %}{% endif %} class="form-check-input icheck" placeholder="Urgente...">
      </div>
    </div>
    <div class="col-md-1">
      <label for="buyorder-form-readed">Leído:</label>
      <div class="form-group">
        <input type="checkbox"  id="buyorder-form-readed" {% if buyorder.readed!=null %}{% if buyorder.readed==1 %} checked {% endif %}{% endif %} class="form-check-input icheck" placeholder="Leído...">
      </div>
    </div>
  </div>
</div>
</div>


<script>
  $('body').on('click', "#storeticket-form-view", function(e){
    var id=$(this).attr("attr-id");
    if(id!=0 && id!=""){
    url=$(this).attr("attr-url");
    url=url.replace('_____',$(this).attr("attr-id"));
    var win = window.open(url, '_blank');
    win.focus();
    }
});

  $(document).ready(function() {

    $('body').on('change', "#buyorder-form-store", function(e) {

      if($("#buyorder-form-store").val()=="6") $("#destination-data").css("display","block");
    });
  });
</script>
