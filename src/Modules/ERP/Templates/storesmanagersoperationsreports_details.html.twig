<div class="modal fade" tabindex="-1" id="consumerdetailedreport-modal-form" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content" style="transform: matrix(1, 0, 0, 1, 0, 0);">
				<div class="modal-header">
					<h4 class="modal-title">Consumo detallado del usuario</h4>
				</div>
        <div id="consumerdetailedreport-modal-form-body">
					<div class="row">
						<div class="col-md-12">
							{% if detailedconsumerlist is defined %}
							{% set listConstructor = detailedconsumerlist %}
							{{ include('@Globale/list.html.twig') }}
								<input type="hidden" id="consumerid">
							{% endif %}
						</div>
					</div>
        </div>
        </br></br>
        <div id="consumerdetailedreport-modal-form-footer" class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">{{ ("Aceptar")|trans }}</button>
        </div>
      </div>
    </div>
</div>

<div class="modal fade" tabindex="-1" id="productdetailedreport-modal-form" aria-hidden="true">
		<div class="modal-dialog modal-lg">
			<div class="modal-content" style="transform: matrix(1, 0, 0, 1, 0, 0);">
				<div class="modal-header">
					<h4 class="modal-title">Consumo detallado de producto</h4>
				</div>
        <div id="productdetailedreport-modal-form-body">
					<div class="row">
						<div class="col-md-12">
							{% if detailedproductlist is defined %}
							{% set listConstructor = detailedproductlist %}
							{{ include('@Globale/list.html.twig') }}
							<input type="hidden" id="productid">
							{% endif %}
						</div>
					</div>
        </div>
        </br></br>
        <div id="productdetailedreport-modal-form-footer" class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">{{ ("Aceptar")|trans }}</button>
        </div>
      </div>
    </div>
</div>


<script>
$('body').on('click', "[id^='listStoresManagersOperations-field-button-consumerDetailsButton-']", function(e) {
		var url_list3=$("#{{ detailedconsumerlist.id }}").DataTable().ajax.url();
		url_list3=updateURLParameter(url_list3,"consumerid",$(this).attr('attr-id'));
		url_list3=updateURLParameter(url_list3,"datefrom",$('#date-from').val());
		url_list3=updateURLParameter(url_list3,"dateto",$('#date-to').val());
		url_list3=updateURLParameter(url_list3,"store",$('#stores').val());
		$("#{{ detailedconsumerlist.id }}").DataTable().ajax.url(url_list3).load();
		$("#consumerdetailedreport-modal-form").modal('show');
		$("#consumerid").val($(this).attr('attr-id'));
});

$('body').on('click', "[id^='listStoresManagersOperationsLines-field-button-productDetailsButton-']", function(e) {
		var url_list4=$("#{{ detailedproductlist.id }}").DataTable().ajax.url();
		url_list4=updateURLParameter(url_list4,"productid",$(this).attr('attr-id'));
		url_list4=updateURLParameter(url_list4,"datefrom",$('#date-from').val());
		url_list4=updateURLParameter(url_list4,"dateto",$('#date-to').val());
		url_list4=updateURLParameter(url_list4,"store",$('#stores').val());
		$("#{{ detailedproductlist.id }}").DataTable().ajax.url(url_list4).load();
		$("#productdetailedreport-modal-form").modal('show');
		$("#productid").val($(this).attr('attr-id'));
});

</script>
