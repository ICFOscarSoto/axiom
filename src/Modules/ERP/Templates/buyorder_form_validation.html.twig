{# Campos obligatorios, y con formato especial, del formulario de pedidod de compra #}
<script>
  function validate_buyorder(){
  // Proveedor obligatorio
    if ($("#supplier-form-code").val()==""){
      toastr.error("Por favor, selecciona un proveedor", "Confirmación", confirmation);
      return false;
    }
    // Si es urgente obligatorio poner el motivo de urgencia
    if ($("#buyorder-form-priority").is(':checked')){
      if ($("#buyorder-form-observationpriority").val()==""){
        toastr.error("Por favor, indica el motivo de la urgencia", "Confirmación", confirmation);
        return false;
      }
    }
    return true;
}
</script>
